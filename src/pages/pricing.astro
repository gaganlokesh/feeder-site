---
import Icon from 'astro-icon';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing - Feedflow">
  <main>
    <!-- Pricing plans -->
    <section class="py-24">
      <div class="container mx-auto">
        <div class="mb-2 font-medium text-center uppercase tracking-widest text-primary-600">
          Pricing
